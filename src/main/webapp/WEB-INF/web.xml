<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="true" version="3.0">

	<listener>
		<listener-class>metastore.ApplicationInitializer</listener-class>
	</listener>

	<servlet>
		<servlet-name>jobs-controller</servlet-name>
		<servlet-class>metastore.controllers.JobsController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>jobs-controller</servlet-name>
		<url-pattern>/jobs</url-pattern>
		<url-pattern>/jobs/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dashboard-controller</servlet-name>
		<servlet-class>metastore.controllers.DashboardController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dashboard-controller</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>dk.dtic.metastore</taglib-uri>
			<taglib-location>/WEB-INF/taglibs/metastore.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>